extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Contratos de #{instituicao} | id #{nipc}

    .w3-container
      table.w3-table-all
        tr
          th
            p _id
          th
            p DataInicioContrato
          th
            p DataFimContrato
          th
            p NomeInstituicao 
          th
            p AreasInvestigacao
        each contrato in contratos
          tr
            td
              a(href="/"+contrato._id) #{contrato._id}
            td
              p=contrato.DataInicioContrato
            td
              p=contrato.DataFimContrato
            td
              a(href="/inst/"+contrato.NIPCInstituicao) #{contrato.NomeInstituicao}
            td
              p=contrato.AreasInvestigacao

